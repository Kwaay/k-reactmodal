{
  "name": "@k_ben/k-reactmodal",
  "version": "1.0.3",
  "description": "A modular react modal.",
  "main": "./dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "types": "./dist/types/index.d.ts",
    "default": "./dist/index.js"
  },
  "homepage": "https://kwaay.github.io/k-reactmodal/",
  "repository": {
